#include <stdio.h>
#include <stdlib.h>

/*


 ****PROGRAMA GENÉRICO DE VENDAS NÃO FUNCIONAL****


*/

int main(void) {

  int menuVendas, qntcancelar, regVendas, qntvendido, caixa, dinheiro, dividas, menuobs, menuEstq, menutemp;

  char prodvendido[20], prodcancelar[20], obs[200];

  float precovendido;

  int 
  sair = 0, /* ESSA VARIAVEL DEVE SER USADA PARA FAZER O DO WHILE Q FAZ ESSE MENU VOLTAR PARA O MENU PRINCIPAL DO PROGRAMA */
  sair1 = 0,
  sair2 = 0,
  sair3 = 0,
  sair4 = 0,
  sair5 = 0,
  sair6 = 0,
  sair7 = 0,
  sair8 = 0,
  sair9 = 0,
  sair10 = 0;

  /* MENU PRINCIPAL DE VENDAS */

    printf("***********VENDAS**********");
