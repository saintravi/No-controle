          if (dividas == 1) {

            printf("**********DIVIDAS GERAIS**********");
            printf("\n\n\n\n");

            /* NA CONSULTA DE DIVIDAS GERAIS DEVE MOSTRAR TODAS AS DIVIDAS INCLUINDO O VALOR DEVIDO AOS FORNECEDORES E O SALÁRIO DOS FUNCIONÁRIOS */
          }

          if (dividas == 2) {

            printf("**********DESPESAS COM FUNCIONÁRIOS**********");
            printf("\n\n\n\n");

            /* GASTOS COM FUNCIONÁRIOS COMO SALÁRIO, VALE TRANSPORTE, EXTRAS, DECIMO TERCEIRO, PODERÁ SER CADASTRADO PELO USUÁRIO EDITOR */
          }

          if (dividas == 3) {

            printf("**********DESPESAS COM FORNECEDORES**********");
            printf("\n\n\n\n");

            /* O USUÁRIO EDITOR PODERÁ CADASTRAR OS FORNECEDORES E O VALOR DEVIDO A CADA UM DELES */
          }

          if (dividas == 4) {

            sair3 = 1;
          }

        } while (sair3 == 0); /* VOLTAR DA CONSULTA DE DIVIDAS*/
        }

        if (dinheiro == 3) {

          sair5 = 1;
        }
    } while (sair5 == 0); /* VOLTAR DO LUCRO */

    if (caixa == 2) {

      do {

      printf("**********OBSERVAÇÕES**********");
      printf("\n\n\n\n");
      printf("1. Adicionar Observação\n");
      printf("2. Visualizar Observação\n");
      printf("3. Remover Observação\n");
      printf("4. Voltar");
      printf("\n\n");
      scanf("%i", &menuobs);
      printf("\n\n");

      if(menuobs == 1){

        printf("Observação:\n");
        scanf("%s", obs);

        /* A OBSERVAÇÃO SERÁ SALVA E PODERÁ SER VISUALIZADA EM OUTRA PARTE DO PROGRAMA */
      }

      if (menuobs == 2) {

        printf("Observações:\n\n\n\n");

        /* CASO NÃO TENHAM FEITO NENHUMA OBSERVAÇÃO O PROGRAMA DEVERÁ IMPRIMIR A SEGUINTE MENSAGEM "NENHUMA OBSERVAÇÃO A SER VISUALIZADA" */
      }

      if (menuobs == 3){

        printf("Selecione a observação a ser removida:\n");
        printf("\n\n\n");

        /* O USUÁRIO PODERÁ VISUALIZAR AS OBERVAÇÕES E ESCOLHER DENTRE ELAS AS QUE GOSTARIA DE EXCLUIR */
      }

      if (menuobs == 4) {

        sair7 = 0;
      }
    } while (sair7 == 0); /* WHILE DO MENU OBS */
    }

    }

    /* PARA CADA "VOLTAR" TEM UM DO WHILE :/ */

    } while (sair4 == 0); /* WHILE DO CASE 2 */

    break;

    case 3 : do {

      printf("**********ESTOQUE**********");
      printf("\n\n\n\n");
      printf("1. Editar Estoque\n");
      printf("2. Visualizar Estoque\n");
      printf("3. Editar Fornecedores\n");
      printf("4. Visualizar Fornecedores");
      printf("5. Voltar");
      printf("\n\n");

      scanf("%i", &menuEstq);

      printf("\n\n");

      if(menuEstq == 1) {

        /* AQUI O USUÁRIO PODERÁ EDITAR O ESTOQUE */
      }

      if (menuEstq == 2) {

        /* AQUI O USUÁRIO PODERÁ VISUALIZAR O ESTOQUE */

      }

      if (menuEstq == 3) {

        /* AQUI O USUÁRIO PODERÁ EDITAR OS FORNECEDORES */

      }

      if (menuEstq == 4) {

        /* AQUI O USUÁRIO PODERÁ VISUALIZAR OS FORNECEDORES */

      }

      if (menuEstq == 5) {

        sair8 = 1;
      }
    } while (sair8 == 0); /*WHILE DO CASE 3 */

    break;

    case 4 : do {

      /* EU NÃO ENTENDI O CONCEITO DAS ENCOMENDAS, SÃO AS ENCOMENDAS DO USUÁRIO EDITOR OU DA CLIENTELA DELE? */

    } while (sair9 == 0); /* WHILE DO CASE 4 */

    case 5: do {

      /* NÃO FAÇO A MENOR IDEIA DE COMO FAZER ISSO */

      printf("**********BALANÇO TEMPORAL**********");
      printf("\n\n\n\n");
      printf("1. Balanço Semanal\n");
      printf("2. Balanço Mensal\n");
      printf("3. Balanço Anual\n");
      printf("4. Voltar");
      printf("\n\n");
      scanf("%i", &menutemp);
      printf("\n\n");
    } while (sair10 == 0); /* WHILE DO CASE 5 */

 } /* FIM DO SWITCH */
  
 return 0; 
 
}
